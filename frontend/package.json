{
	"name": "thymis-frontend",
	"version": "0.5.0-dev",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:integration:update-snapshots": "playwright test --update-snapshots",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@novnc/novnc": "npm:@elikoga/novnc@^1.6.0",
		"@playwright/test": "1.50.1",
		"@prgm/sveltekit-progress-bar": "^3.0.2",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.17.3",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.9",
		"@types/node": "^22.13.5",
		"@typescript-eslint/eslint-plugin": "^8.8.0",
		"@typescript-eslint/parser": "^8.11.0",
		"@xterm/addon-attach": "^0.11.0",
		"@xterm/addon-fit": "^0.10.0",
		"@xterm/addon-webgl": "^0.18.0",
		"@xterm/xterm": "^5.5.0",
		"@zerodevx/svelte-toast": "^0.9.6",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-plugin-svelte": "^3.0.2",
		"eslint-plugin-unused-imports": "^4.1.4",
		"flowbite": "^2.5.2",
		"flowbite-svelte": "^0.48.4",
		"lucide-svelte": "^0.483.0",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "^5.25.3",
		"svelte-check": "^4.0.5",
		"svelte-dnd-action": "^0.9.52",
		"svelte-highlight": "^7.7.0",
		"svelte-i18n": "^4.0.1",
		"svelte-multiselect": "^11.0.0-rc.1",
		"svelte-outside-click": "^1.1.2",
		"svelte-resizable-columns": "^1.0.14",
		"sveltekit-search-params": "^4.0.0-next.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.11.0",
		"vite": "^6.2.0",
		"vitest": "^3.0.0"
	},
	"type": "module",
	"overrides": {
		"svelte-multiselect": {
			"svelte": "$svelte"
		},
		"@sveltejs/kit": {
			"cookie": "^1.0.0"
		}
	}
}
